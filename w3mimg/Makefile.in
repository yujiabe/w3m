#
# w3mimg/Makefile
#
@SET_MAKE@
SHELL=@SHELL@
srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = $(srcdir):.
RM=rm

IMGCFLAGS=@IMGX11CFLAGS@ @IMGFBCFLAGS@

.PHONY: fb x11
all: w3mimg.o @IMGTARGETS@

w3mimg.o: w3mimg.c
	$(CC) $(CFLAGS) $(IMGCFLAGS) -I.. -I$(top_srcdir) -I$(srcdir) -c $<

fb x11:
	cd $@ && $(MAKE) CC="$(CC)" CFLAGS="$(CFLAGS)"

clean:
	@-$(RM) -f *.o
	@for dir in fb x11; do \
		(cd $$dir && $(MAKE) clean RM=$(RM)); \
	 done

distclean: clean
	-$(RM) -f Makefile

